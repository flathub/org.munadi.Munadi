{
    "id": "org.munadi.Munadi",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "25.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "munadi",
    "finish-args": [
        "--device=dri",
        "--share=network",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--socket=system-bus",
        "--socket=session-bus",
        "--socket=inherit-wayland-socket",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher"
    ],
    "modules": [
        {
            "name": "qtbase",
            "build-options": {
                "no-debuginfo": true
            },
            "buildsystem": "simple",
            "cleanup": ["/*"],
            "build-commands": [
            "./configure -ccache -prefix /app -opensource -confirm-license -release -static -qpa wayland -nomake tools -nomake examples -nomake tests -nomake benchmarks -nomake manual-tests -nomake minimal-static-tests",
            "cmake --build . --parallel",
            "cmake --install ."
            ],
            "sources": [

                {
                    "type": "archive",
                    "url": "https://download.qt.io/archive/qt/6.10/6.10.0/submodules/qtbase-everywhere-src-6.10.0.tar.xz",
                    "sha256": "ead4623bcb54a32257c5b3e3a5aec6d16ec96f4cda58d2e003f5a0c16f72046d"
                }
            ]
        },
        {
            "name": "qtshadertools",
            "build-options": {
                "strip": true
            },
            "buildsystem": "cmake-ninja",
            "cleanup": ["/*"],
            "config-opts": ["-DCMAKE_BUILD_TYPE=Release"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.qt.io/archive/qt/6.10/6.10.0/submodules/qtshadertools-everywhere-src-6.10.0.tar.xz",
